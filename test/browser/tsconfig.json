{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "@vitest/browser/providers/playwright",
      "vitest-browser-react",
      "vitest/import-meta"
    ],
    "esModuleInterop": true
  },
  "include": [
    "fixtures",
    "test",
    "specs",
    "./vitest.config.*",
    "./setup.unit.ts"
  ]
}
